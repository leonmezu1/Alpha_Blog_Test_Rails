<div class="card card-body bg-light col-sm-8 offset-sm-2">
	<h5><strong><%= @article.title %></strong></h5>
	<hr>
	<%= @article.description %>
	<div class="btns d-flex flex-row my-4 mx-auto justify-content-around">
		<%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-sm btn-primary mx-4" %>
		<%= link_to 'Back to listing', articles_path, class: "btn btn-sm btn-success mx-4" %>
		<%= link_to "Delete this article", article_path(@article), method: :delete, data: { confirm: "Are you sure?"}, 
																			 class: "btn btn-sm btn-danger mx-4" %>
	</div>
</div>
